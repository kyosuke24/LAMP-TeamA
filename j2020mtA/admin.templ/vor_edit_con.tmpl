<body>
<div id="page">
<header><h1>ボランティア編集</h1></header>
</div>

<!--ぱんくず-->
<div id="container">
{include file='gmenu_admin.tmpl'}
</div>

<div style="text-align:center;">
{$err_flag}
<form name="form1" action="{$smarty.server.PHP_SELF}" method="post" >
<br><br>
<p><span class="red">＊</span>は必須項目</p>

    <table align="center">
    <tr>
    <th>ボランティアID</th> 
    <td>{$Vor_id_txt}</td>
    </tr>
   
    <tr>
    <th>ボランティア名<span class="red">*</span></th>
    <td>
    <strong>{$smarty.post.Vor_name|escape}</strong>
    <input type="hidden" name="Vor_name" value="{$smarty.post.Vor_name|escape}" /></td>
    </tr>

    <tr>
    <th>開始日<span class="red">*</span></th>
    <td>
    <strong>{$smarty.post.Vor_day|escape}</strong>
    <input type="hidden" name="Vor_day" value="{$smarty.post.Vor_day|escape}" /></td>
    </tr>

    <tr>
    <th>最終日<span class="red">*</span></th>
    <td>
    <strong>{$smarty.post.Vor_finishday|escape}</strong>
    <input type="hidden" name="Vor_finishday" value="{$smarty.post.Vor_finishday|escape}" /></td>
    </tr>

    <tr>
    <th>人数<span class="red">*</span></th>
    <td>
    <strong>{$smarty.post.Vor_number|escape}</strong>
    <input type="hidden" name="Vor_number" value="{$smarty.post.Vor_number|escape}" /></td>
    </tr>

    <tr>
    <th>開催場所<span class="red">*</span></th>
    <td>
    <strong>{$smarty.post.Vor_place|escape}</strong>
    <input type="hidden" name="Vor_place" value="{$smarty.post.Vor_place|escape}" /></td>
    </tr>

    <tr>
    <th>内容<span class="red">*</span></th>
    <td>
    <strong>{$smarty.post.Vor_content|escape}</strong>
    <input type="hidden" name="Vor_content" value="{$smarty.post.Vor_content|escape}" /></td>
    </tr>

    <tr>
    <th>詳細<span class="red">*</span></th>
    <td>
    <strong>{$smarty.post.Vor_explanation|escape}</strong>
    <input type="hidden" name="Vor_explanation" value="{$smarty.post.Vor_explanation|escape}" /></td>
    </tr>
    </table>


<input type="hidden" name="func" value="" />
<input type="hidden" name="param" value="" />
<input type="hidden" name="Vor_id" value="{$Vor_id}" />
<p class="center">
<br>
<input type="button" class="btn-flat-border" value="戻る" onClick="javascript:set_func_form('edit','')"/>&nbsp;
<input type="button" class="btn-flat-border" value="{$button}" onClick="javascript:set_func_form('set','')"/>
</p>
</form>

