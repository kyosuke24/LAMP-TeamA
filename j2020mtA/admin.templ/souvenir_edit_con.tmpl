    <strong>{$smarty.post.Souvenir_introduction|escape}</strong>
    <input type="hidden" name="Souvenir_introduction" value="{$smarty.post.Souvenir_introduction|escape}" /></td>
    </tr>

    <tr>
    <th>写真</th>
    <td>
        {$smarty.post.Souvenir_pass|escape}
        <input type="hidden" name="Souvenir_pass" value="{$smarty.post.Souvenir_pass|escape}" />
    </tr>
    </table>


